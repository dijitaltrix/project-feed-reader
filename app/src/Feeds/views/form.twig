<section class="section">
	<div class="row">
		<div class="column col-12">
			{% include '@app/includes/alerts.twig' with {'alerts': alerts} %}
		</div>
	</div>
</section>

<section class="section">
	<div class="row">

		<div class="column col-12">
			{% if errors.name is defined %}
			<div class="form-group has-error">
			{% else %}
			<div class="form-group">
			{% endif %}
				<label for="name" class="form-label">Feed name</label>
				<input type="text" class="form-input" id="name" name="name" placeholder="e.g. Awesome news feed" value="{{ feed.name }}">
				{% if errors.name is defined %}
				<p class="form-input-hint">{{ errors.name }}</p>
				{% endif %}
			</div>
		</div>

		<div class="column col-12">
			{% if errors.url is defined %}
			<div class="form-group has-error">
			{% else %}
			<div class="form-group">
			{% endif %}
				<label for="url" class="form-label">Feed location</label>
				<input type="text" class="form-input" id="url" name="url" placeholder="https://feeds.awesome-news.com" value="{{ feed.url }}">
				{% if errors.url is defined %}
				<p class="form-input-hint">{{ errors.url }}</p>
				{% endif %}
			</div>
		</div>

	</div>
</section>
